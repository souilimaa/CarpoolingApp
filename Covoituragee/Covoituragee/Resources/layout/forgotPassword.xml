<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/farrow"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="300dp"
    android:text="Quiter"
    android:textColor="@android:color/black"
    android:background="@android:color/transparent"
      
    />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="30dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrez votre CIN:"
            android:textSize="18sp"
            android:layout_marginLeft="13dp"/>

       
          <EditText
    android:id="@+id/edit_text_cin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_text_background"
    
    android:padding="10dp"
    android:layout_margin="10dp"
  
             android:textSize="18sp"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suivant"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
                    android:background="@drawable/button_radius2"
            android:textColor="@android:color/white"
/>

        <TextView
            android:id="@+id/text_view_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nouveau mot de passe:"
            android:textSize="18sp"
            android:visibility="gone"/>

     
        
          <EditText
    android:id="@+id/edit_text_new_password"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
                        android:inputType="textPassword"
            android:textSize="18sp"
    android:background="@drawable/edit_text_background"
    android:visibility="gone"
    android:padding="10dp"
    android:layout_margin="10dp"
  
            />

        <TextView
            android:id="@+id/text_view_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmez le nouveau mot de passe:"
            android:textSize="18sp"
            android:visibility="gone"/>

        
        <EditText
    android:id="@+id/edit_text_confirm_password"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
                        android:inputType="textPassword"
            android:textSize="18sp"
    android:background="@drawable/edit_text_background"
    android:visibility="gone"
    android:padding="10dp"
    android:layout_margin="10dp"
  
          />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Changer le mot de passe"
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_marginTop="16dp"
                    android:background="@drawable/button_radius2"
                        android:textColor="@android:color/white"

/>

    </LinearLayout>

</ScrollView>
</RelativeLayout>