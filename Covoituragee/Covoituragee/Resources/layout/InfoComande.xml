<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:id="@+id/linearLayoutAll"

>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_marginTop="4dp"
        android:layout_marginRight="6dp"

        >
<refractored.controls.CircleImageView

                android:paddingTop="16dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/userImage"
            android:src="@drawable/circle"  



  
        />
       

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_weight="1"
            >
            <TextView
                android:text="N"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/UserFullNameTextV"
                android:paddingTop="4dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingBottom="1dp"
                android:paddingLeft="4dp"
           
            />
           
            <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout5"
                    android:paddingLeft="2dp"
              
                >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/R1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/R2" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/R3" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/R4" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/R5" />
                    <TextView
                        android:text="(5 avis)"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/nbrAvisTV" />





                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3"
            android:layout_weight="0">
            
            <TextView
                android:text="(4 seats)"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/NbrSeatsTextV"
                android:padding="2dp"
                android:layout_gravity="center"
                />


        </LinearLayout>

    </LinearLayout>


    <TextView
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sourceTextV"
        android:drawablePadding="8dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
       android:drawableLeft="@drawable/greenCircleIcon"

            />
    <TextView
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/destinationTextV"
        android:drawablePadding="8dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:layout_marginLeft="20dp"
         android:drawableLeft="@drawable/circle"

    />
    <TextView
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dateTrajetTextV"
        android:paddingLeft="10dp"
        android:drawablePadding="8dp"
        android:layout_marginLeft="13dp"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
                 android:drawableLeft="@drawable/dateicone"

        

        />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4">

        <androidx.appcompat.widget.AppCompatButton
            android:text="Accepter"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:layout_height="38dp"
            android:textAllCaps="false"
            android:id="@+id/btnaccepted"
            android:layout_margin="6dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="0"
            android:background="#ff33691e" 
           />
        <androidx.appcompat.widget.AppCompatButton
            android:text="Refuser"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:layout_height="38dp"
            android:textAllCaps="false"
            android:id="@+id/btnrefuse"
            android:layout_margin="6dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="0"
            android:layout_marginLeft="0.0dp"
            android:background="#ffd50000"
            
           />




    </LinearLayout>

    
</LinearLayout>