<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayoutOfAll"
>

    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="52.7dp"
        android:id="@+id/linearLayout1"
        android:background="#0d996f"
>
        <ImageView
            android:src="@drawable/leftarricone"
            android:layout_width="37.3dp"
            android:layout_height="38.3dp"
            android:id="@+id/imageView1"
            android:layout_marginTop="18px"
                 />



        <Button
            android:text="suivant"
            android:layout_width="91.3dp"
            android:layout_height="38.0dp"
            android:layout_marginTop="10.0dp"
            android:id="@+id/button1"
            android:freezesText="false"
            android:textColor="#0d996f"
            android:backgroundTint="#ffffffff"
            app:cornerRadius="80dp"
            android:layout_marginLeft="640px"
         

            />
    </LinearLayout>

    <TextView
        android:text="Bagage"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="159.3dp"
        android:layout_marginTop="200px"
        android:layout_height="31.3dp"
        android:layout_marginLeft="380px"
        android:backgroundTint="#ff212121"
        android:id="@+id/textView1"
        >
    </TextView>

    

        <RadioGroup
        android:id="@+id/radioGroup1"
            android:layout_width="121.0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30px" >

            <RadioButton
                android:text="petit"
                android:layout_width="121.0dp"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonPetit" />
            <RadioButton
                android:text="grand"
                android:layout_width="117.3dp"
                android:layout_height="match_parent"
                android:id="@+id/radioButtonGrand"
                android:layout_marginRight="0.0dp" />
            <RadioButton
                android:text="No bagage"
                android:layout_width="118.3dp"
                android:layout_height="match_parent"
                android:id="@+id/radioButtonNObagage" />
        </RadioGroup>


    <TextView
        android:text="Préférence"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="159.3dp"
        android:layout_marginTop="200px"
        android:layout_height="31.3dp"
        android:layout_marginLeft="350px"
        android:backgroundTint="#ff212121"
        android:id="@+id/textView2"
        >
    </TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/refer"
        android:layout_alignParentBottom="true"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:elevation="4dp"
        android:layout_marginTop="100px">
        <CheckBox
            android:text="Bavardage"
            android:layout_width="101.7dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxBavar" />
        <CheckBox
            android:text="Fumer"
            android:layout_width="72.7dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxFumer" />
        <CheckBox
            android:text="Animaux"
            android:layout_width="88.0dp"
            android:layout_height="match_parent"
            android:id="@+id/checkBoxAnimaux" />
        <CheckBox
            android:text="Musique"
            android:layout_width="91.7dp"
            android:layout_height="match_parent"
            android:id="@+id/checkBoxMusique"
           />
    </LinearLayout>
    
>
        <AutoCompleteTextView
            android:layout_width="237.0dp"
            android:layout_height="51.0dp"
            android:id="@+id/editTextautre"
            android:layout_marginLeft="5dp"
            android:hint="Autre Reference"
            android:visibility="gone"
            android:background="#E8EBEC"
            app:cornerRadius="50dp"
            android:paddingLeft="150px"
                        
       
            />


</LinearLayout>
