<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:id="@+id/linearLayoutAll"
 
    >
   


          
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1"
            android:layout_marginTop="4dp"
            android:layout_marginRight="6dp"

        >
            <refractored.controls.CircleImageView
                android:paddingTop="16dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/userImage"
                android:src="@drawable/circle"  
  
        />
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2"
                android:layout_weight="1"
            >
                <TextView
                    android:text="N"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/UserFullNameTextV"
                    android:paddingTop="4dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingBottom="1dp"
                    android:paddingLeft="4dp"
           
            />
               <TextView
                    android:text="Toyota | volv"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/CarMarkModeleTextV"
                    android:textColor="#000000"
                    android:paddingLeft="4dp"
                    android:paddingBottom="4dp"
                
                />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3"
                android:layout_weight="0">
                <TextView
                    android:text="140 Dhs"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/TrajetPriceTextV"
                    android:padding="4dp"
                    android:textColor=" #50C878"
                    android:textStyle="bold"
                />
                <TextView
                    android:text="(4 seats)"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/NbrSeatsTextV"
                    android:padding="2dp"
                    android:layout_gravity="center"
                />


            </LinearLayout>

        </LinearLayout>


        <TextView
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sourceTextV"
            android:drawableLeft="@drawable/greenCircleIcon"
            android:drawablePadding="8dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/destinationTextV"
            android:drawableLeft="@drawable/circle"
            android:drawablePadding="8dp"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:layout_marginLeft="20dp"
    />
        <TextView
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dateTrajetTextV"
            android:drawableLeft="@drawable/dateIcone"
            android:paddingLeft="10dp"
            android:drawablePadding="8dp"
            android:layout_marginLeft="13dp"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"
        

        />
    <RelativeLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RlayoutBtnEvaluer">

        <androidx.appcompat.widget.AppCompatButton
            android:text="Accepted"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:layout_height="38dp"
            android:textAllCaps="false"
            android:background="@drawable/buttonMesTrajetsRadius"
            android:id="@+id/btnMesTrajetsStatus"
            android:layout_margin="6dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="0"
           />
        
        <androidx.appcompat.widget.AppCompatButton
        android:text="Evaluer le conducteur"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="38dp"
        android:textAllCaps="false"
        android:id="@+id/btnEvaluerConducteur" 
        android:layout_margin="6dp"
        android:background="@drawable/EvaluerButtonBackground"
        android:layout_marginBottom="3dp"
        android:drawableLeft="@drawable/star32"
        android:textColor="@android:color/white"
        android:layout_alignParentEnd="true"
        android:drawablePadding="10dp"
        android:paddingLeft="4dp"
        android:paddingRight="18dp"
        android:visibility="gone"

            />
         <androidx.appcompat.widget.AppCompatButton
        android:text="Payer"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="38dp"
        android:textAllCaps="false"
        android:id="@+id/paypalbutton" 
        android:layout_margin="6dp"
        android:background="@drawable/EvaluerButtonBackground"
        android:layout_marginBottom="3dp"
        android:textColor="@android:color/white"
        android:layout_alignParentEnd="true"
        android:visibility="gone"

            />

        </RelativeLayout>
    </LinearLayout>

