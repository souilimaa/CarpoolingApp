<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
>

    <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1"
            android:layout_marginTop="4dp"
            android:layout_marginRight="6dp"

        >
        <refractored.controls.CircleImageView
            android:paddingTop="16dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/userImage"
            android:src="@drawable/circle"
  
        />
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_weight="1"
            >
            <TextView
                android:text="N"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/UserFullNameTextV"
                android:paddingTop="4dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingBottom="1dp"
                android:paddingLeft="4dp"
           
            />
            <TextView
                 android:text="Toyota | volv"
                 android:textAppearance="?android:attr/textAppearanceMedium"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/CarMarkModeleTextV"
                 android:textColor="#000000"
                 android:paddingLeft="4dp"
                 android:paddingBottom="4dp"
                
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3"
            android:layout_weight="0">
            <TextView
                android:text="2023-04-20"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@id/dateTrajetTextV"
                android:padding="2dp"
                android:textColor=" #50C878"
                android:textStyle="bold"
                android:layout_gravity="end"
                />
            <TextView
                android:text="8:00"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@id/TempsTrajetTextV"
                android:padding="4dp"
                android:textColor="#50C878"
                android:layout_gravity="end"
                 android:textStyle="bold"
                />


        </LinearLayout>

    </LinearLayout>


    <TextView
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sourceTextV"
        android:drawableLeft="@drawable/greenCircleIcon"
        android:drawablePadding="8dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
            />
    <TextView
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/destinationTextV"
        android:drawableLeft="@drawable/circle"
        android:drawablePadding="8dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:layout_marginLeft="20dp"
    />
    
    
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4"
            android:layout_margin="7dp"
			>
            <TextView
                android:text="Places :"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textaView1" 
                android:layout_marginTop="10dp"
                android:paddingLeft="7dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#64a7de"
                />
        <TextView
            android:text=" 2"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/nbrPlaceTrajetTV"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="5dp"

                />
            <TextView
                android:text="140 DHS"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/prixTV" 
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="4.99dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#64a7de"
                
                
                />
            <androidx.appcompat.widget.AppCompatButton
           android:text="Pris les Passagers"
           android:layout_width="wrap_content"
           android:textColor="@android:color/white"
           android:layout_height="38dp"
           android:textAllCaps="false"
           android:background="@drawable/buttonMesTrajetsRadius"
           android:id="@+id/pickUpBtn"
           android:layout_marginTop="5dp"
           android:layout_weight="0"
            android:padding="4dp"
		   android:textStyle="bold"
		   android:visibility="gone"

           />

            <androidx.appcompat.widget.AppCompatButton
            android:text="Commencer le voyage"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="38dp"
            android:textAllCaps="false"
            android:id="@+id/btnStartTrajet"
            android:layout_marginTop="5dp"
            android:background="@drawable/btnstarttrajetbackgborderr"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:layout_weight="1"
			android:textStyle="bold"
            
            />
             <androidx.appcompat.widget.AppCompatButton
            android:text="Terminer le voyage"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="38dp"
            android:textAllCaps="false"
            android:id="@+id/btnTerminerTrajet"
            android:layout_marginTop="5dp"
            android:background="@drawable/btnstatustrajetsoffertsborderr"
            android:textColor="@android:color/white"
            android:layout_weight="1"
			android:textStyle="bold"
            android:visibility="gone"
            />
		
	<androidx.appcompat.widget.AppCompatButton
        android:text="Evaluer les Passagers"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="38dp"
        android:textAllCaps="false"
        android:id="@+id/btnEvaluerPassagers" 
        android:background="@drawable/EvaluerButtonBackground"
        android:layout_marginBottom="3dp"
        android:drawableLeft="@drawable/star32"
        android:textColor="@android:color/white"
        android:layout_alignParentEnd="true"
        android:drawablePadding="10dp"
        android:paddingRight="6dp"
        android:visibility="gone"
        
            />
         <androidx.appcompat.widget.AppCompatButton
           android:text="CompletÃ©"
           android:layout_width="wrap_content"
           android:textColor="@android:color/white"
           android:layout_height="38dp"
           android:textAllCaps="false"
           android:background="@drawable/buttonMesTrajetsRadius"
           android:id="@+id/btnTrajetCompleted"
           android:layout_marginTop="5dp"
           android:layout_weight="0"
            android:padding="4dp"
		   android:textStyle="bold"
		   android:visibility="gone"

           />
            </LinearLayout>

</LinearLayout>
